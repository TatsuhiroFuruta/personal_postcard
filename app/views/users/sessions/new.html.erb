<div class="bg-white py-6 sm:py-8 lg:py-12 mx-auto flex">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <%= render "users/shared/logo" %>
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8">ログイン画面</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mx-auto max-w-lg rounded-lg border"}) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="flex flex-col gap-4 p-4 md:p-8">

        <div>
          <%= f.label :email, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base"%>
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>

        <div>
          <%= f.label :password, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base"%><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div>
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
          </div>
        <% end %>

        <%= f.submit "ログイン", class: "block rounded-lg bg-blue-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-gray-300 transition duration-100 hover:bg-blue-600 focus-visible:ring active:bg-gray-600 md:text-base" %>
    
      </div>

      <div class="flex flex-col items-center bg-gray-100 p-4">

        <div class="pb-4">
          <%= link_to "初めての方はこちら", new_registration_path(resource_name), class: "text-indigo-500 transition duration-100 hover:text-indigo-600 active:text-indigo-700" %>
        </div>

        <div>
          <%= link_to "パスワード忘れた？", new_password_path(resource_name), class: "text-indigo-500 transition duration-100 hover:text-indigo-600 active:text-indigo-700" %>
        </div>

      </div>
    <% end %>
  </div>
</div> 
