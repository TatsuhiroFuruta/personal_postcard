<div class="bg-white py-6 sm:py-8 lg:py-12 mx-auto">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
    <%= render "users/shared/logo" %>
    <h2 class="mb-4 text-center text-2xl font-bold text-gray-800 md:mb-8">新規登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mx-auto max-w-sm"}) do |f| %>

      <div class="flex flex-col gap-4 p-4 md:p-8">
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="">
          <%= f.label :email, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>

        <div class="">
          <%= f.label :password, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>

        <div class="">
          <%= f.label :password_confirmation, class: "mb-2 inline-block text-sm text-gray-800 sm:text-base" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full rounded border bg-gray-50 px-3 py-2 text-gray-800 outline-none ring-indigo-300 transition duration-100 focus:ring" %>
        </div>

        <%= f.submit "登録", class: "mt-4 inline-block rounded-lg bg-blue-500 px-8 py-3 text-center text-sm font-semibold text-white outline-none ring-indigo-300 transition duration-100 hover:bg-blue-600 focus-visible:ring active:bg-indigo-700 md:text-base" %>  
      <% end %>

        <div class="pt-4">
          <%= link_to "ログインはこちら", new_session_path(resource_name), class: "text-indigo-500 transition duration-100 hover:text-indigo-600 active:text-indigo-700" %>
        </div>
      </div>
  </div>
</div>
